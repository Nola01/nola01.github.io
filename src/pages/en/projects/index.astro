---
import { getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import TopLayout from "@layouts/TopLayout.astro";
import BottomLayout from "@layouts/BottomLayout.astro";
import SearchCollection from "@components/SearchCollection";
import { PROJECTS } from "@consts";

const projects = (await getCollection("projects"))
  .filter((project) => {
    return !project.data.draft && project.id.startsWith("en/");
  })
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const tags = [
  ...new Set(projects.flatMap((project) => project.data.tags)),
].sort((a, b) => a.localeCompare(b));

const estimated_initial_size =
  28 + projects.length * 158 + (projects.length - 1) * 12;
---

<PageLayout title="Projects" description={PROJECTS.DESCRIPTION}>
  <TopLayout>
    <div class="animate">
      <h1 class="text-3xl font-semibold text-black dark:text-white mt-2">
        Projects
      </h1>
      <div class="mt-1">
        Projects I have worked on
      </div>
    </div>
  </TopLayout>
  <BottomLayout>
    <SearchCollection
      client:load
      entry_name={"projects"}
      tags={tags}
      data={projects}
      labels={{
        search: "Search projects",
        showing: "SHOWING",
        of: "OF",
        projects: "PROJECTS",
        oldest: "OLDEST",
        newest: "NEWEST"
      }}
    />
  </BottomLayout>
</PageLayout>